---
interface Props {
  name: string;
  label: string;
}

const { name, label } = Astro.props as Props;
---

<div class='form__control'>
  <label class='form__label' for=`${name}`>{label}</label>
  <input class='form__field' type='text' id=`${name}` />
</div>

<style lang='scss'>
  @use '../css/variables' as vars;

  .form {
    &__control {
      margin-bottom: 2rem;
    }

    &__field {
      display: block;
      width: 100%;
      padding: 0.375rem 0.75rem;
      font-size: 1rem;
      font-weight: 400;
      line-height: 1.5;
      color: vars.$color-body;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
        Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
        sans-serif;
      font-size: 1.6rem;
      border-radius: 5px;
      border: solid #ccc 2px;
      outline: none;
      padding: 0.5rem 1rem;
      transition: ease 0.3s;
      background: vars.$color-bg;

      &:focus {
        box-shadow: 0 0 2px 3px darken(vars.$color-primary, 20%);
        transition: ease 0.3s;
      }
    }

    &__label {
      margin-bottom: 1rem;
      display: inline-block;
      font-size: 2rem;
    }
  }
</style>
