<style lang='scss'>
  @use '../css/mixins';
  @use '../css/variables' as vars;
  .map-container {
    margin: 25rem 0;
    .map {
      width: 100%;
      height: 100%;
      align-self: center;
    }

    .address-list {
      margin-top: 2rem;

      &__item {
        margin: 0;
        padding: 0;
        font-weight: bold;
        list-style: none;
        &::before {
          content: '⭐';
          margin-right: 1rem;
        }
      }
    }
  }

  .center {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .text {
    margin-bottom: 5rem;
  }
  canvas {
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
  }

  .core-team {
    display: grid;
    place-content: center;
    height: 100%;
    gap: 2rem;

    &__img-wrapper {
      width: 150px;
      height: 150px;
      background: lighten(vars.$color-primary, 0%);
      padding: 1rem;
      overflow: hidden;
      border-radius: 50%;

      @include mixins.min-width(medium) {
        // margin: 1rem;
      }
    }
    &__img {
      // margin: 4rem auto;
      width: 120%;
      height: 120%;
      object-fit: cover;

      object-fit: contain;
      filter: grayscale(100%);
    }

    @include mixins.min-width(medium) {
      grid-template-columns: repeat(3, 1fr);

      &__img {
        display: block;
        padding: 0;
      }
    }
  }

  .tag {
    &-list {
      list-style: none;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;

      @include mixins.min-width(medium) {
        padding: 0 20rem;
      }
    }

    &-list__item {
      margin: 1rem 2rem;

      @include mixins.min-width(medium) {
        margin: 1rem 0;
      }
    }
  }
  .companies-list {
    @include mixins.min-width(medium) {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .contact {
    @include mixins.min-width(medium) {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
    & > * {
      padding: 15rem 5rem 0;
    }
  }

  .cards-container {
    @include mixins.min-width(medium) {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 2rem;
    }
  }
</style>

